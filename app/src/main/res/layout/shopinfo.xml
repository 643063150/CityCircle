<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grarybackground"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonbule">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/news_info_back_arrow01" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商家详情"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"></LinearLayout>
    <ImageView
        android:id="@+id/shopimg"
        android:layout_width="match_parent"
        android:src="@mipmap/nopic"
        android:scaleType="centerCrop"
        android:layout_height="120dp" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tell_phone"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/card_phone"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:drawablePadding="5dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:background="@color/linecolor"
            android:layout_height="0.5dp"></View>
        <TextView
            android:id="@+id/adress"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/card_addressx"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/vipcard"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/card_vip"
            android:text="会员卡"
            android:drawablePadding="5dp"
            android:textSize="16dp"
            android:drawableRight="@mipmap/card_go"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:background="@color/linecolor"
            android:layout_height="0.5dp"></View>
        <TextView
            android:id="@+id/shophd"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/card_huodong"
            android:text="优惠活动"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/card_go"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grarybackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonbule">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/news_info_back_arrow01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="会员卡详情"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/ui_10_dip"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/app" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@color/touming"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="立即使用"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计次卡"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/card_moneyx"
            android:gravity="center_vertical"
            android:text="剩余次数:10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:src="@mipmap/card_go" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/shopinfo"
            android:layout_weight="1"
            android:text="商家信息"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:textSize="16dp"
            android:drawableRight="@mipmap/card_down"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:background="@color/linecolor"
            android:layout_height="0.5dp"></View>
        <TextView
            android:layout_weight="1"
            android:drawableLeft="@mipmap/card_phone"
            android:text="电话:aaaaaa"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:drawablePadding="5dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:background="@color/linecolor"
            android:layout_height="0.5dp"></View>
        <TextView
            android:layout_weight="1"
            android:drawableLeft="@mipmap/card_addressx"
            android:text="地址:aaaaa"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:text="商家信息"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:textSize="16dp"
        android:drawableRight="@mipmap/card_down"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/ui_10_dip"
        android:layout_height="40dp" />
</LinearLayout>